{
  "name": "docs-kit",
  "version": "0.1.0",
  "description": "Intelligent documentation agent via MCP",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "docs-guard": "dist/governance/docGuardBin.js",
    "docs-kit": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:ci": "npm run test:indexer:isolated && npm run test:rest",
    "test:indexer": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/indexer --runInBand",
    "test:indexer:isolated": "npm run test:indexer:one && npm run test:indexer:two && npm run test:indexer:rest",
    "test:indexer:one": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/indexer/indexer.test.ts",
    "test:indexer:two": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/indexer/relationshipExtractor.test.ts",
    "test:indexer:rest": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/indexer --testPathIgnorePatterns='indexer.test.ts|relationshipExtractor.test.ts'",
    "test:rest": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns=tests/indexer --runInBand",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --runInBand",
    "check:deps": "bash scripts/check-dependencies.sh",
    "lint": "eslint src/ tests/",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "dev": "tsx src/server.ts",
    "mcp": "node dist/server.js",
    "cli": "node dist/cli.js",
    "gen:site": "node dist/cli.js build-site --out docs-site --root . --db .docs-kit/index.db",
    "gen:docs": "node dist/cli.js generate-repo-docs . docs-output",
    "serve:site": "npx serve docs-site"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/marked": "^5.0.2",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.0",
    "ignore": "^5.3.0",
    "lcov-parse": "^1.0.0",
    "marked": "^17.0.1",
    "openai": "^6.17.0",
    "tree-sitter": "^0.22.1",
    "tree-sitter-c-sharp": "^0.23.1",
    "tree-sitter-dart": "^1.0.0",
    "tree-sitter-go": "^0.21.2",
    "tree-sitter-javascript": "^0.23.0",
    "tree-sitter-php": "^0.22.8",
    "tree-sitter-python": "^0.23.0",
    "tree-sitter-ruby": "^0.23.1",
    "tree-sitter-typescript": "^0.23.0",
    "yaml": "^2.8.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/jest": "^29.5.0",
    "@types/lcov-parse": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0"
  }
}