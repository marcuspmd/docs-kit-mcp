{
  "name": "docs-kit",
  "version": "0.1.0",
  "description": "Intelligent documentation agent via MCP",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "docs-guard": "dist/governance/docGuardBin.js",
    "docs-kit": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "bash scripts/run-indexer-tests.sh && npm run test:unit",
    "test:indexer": "bash scripts/run-indexer-tests.sh",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --selectProjects unit",
    "test:ci": "npm test",
    "test:coverage": "bash scripts/run-coverage.sh",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --runInBand",
    "check:deps": "bash scripts/check-dependencies.sh",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "dev": "tsx src/server.ts",
    "mcp": "node dist/server.js",
    "cli": "node dist/cli.js",
    "gen:site": "node dist/cli.js build-site --out docs-site --root . --db .docs-kit/index.db",
    "gen:docs": "node dist/cli.js generate-repo-docs . docs-output",
    "serve:site": "npx serve docs-site"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/marked": "^5.0.2",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.0",
    "ignore": "^5.3.0",
    "lcov-parse": "^1.0.0",
    "marked": "^17.0.1",
    "openai": "^6.17.0",
    "reflect-metadata": "^0.2.2",
    "tree-sitter": "^0.22.1",
    "tree-sitter-c-sharp": "^0.23.1",
    "tree-sitter-dart": "^1.0.0",
    "tree-sitter-go": "^0.21.2",
    "tree-sitter-javascript": "^0.23.0",
    "tree-sitter-php": "^0.22.8",
    "tree-sitter-python": "^0.23.0",
    "tree-sitter-ruby": "^0.23.1",
    "tree-sitter-typescript": "^0.23.0",
    "tsyringe": "^4.10.0",
    "yaml": "^2.8.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/jest": "^29.5.0",
    "@types/lcov-parse": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0"
  }
}
